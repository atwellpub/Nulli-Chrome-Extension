{
  "name": "Nulli - A Javascript Rules Engine",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Nulli is a conditional rules engine that provides the chrome browser with a way to automate js commands seamlessly while browsing.",
  "homepage_url": "http://www.nullienine.com",
  "icons": {
    "16": "icons/icon16.png",
    "19": "icons/icon19.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "content_scripts": [
  {
	"matches": ["http://*/*", "https://*/*"],
    "js": [
      "src/engine/engine.js"
    ]
  }],
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "browser action demo",
    "default_popup": "src/browser_action/index.html"
  },
  "permissions": [
    "contentSettings",
    "contextMenus",
    "cookies",
    "fileBrowserHandler",
    "notifications",
    "tabs",
    "geolocation",
    "storage",
	"activeTab"
  ]
}